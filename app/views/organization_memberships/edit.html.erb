<div>
  <h2>Manage Members of Organization </h2>
  <br>
  <% if @users.blank? %>
    <h4> You have no members in your organization </h4>
  <% else %>
    <div class="authform">
      <%= form_tag organization_membership_path, method: :put do %>
        <%= hidden_field_tag "organization_id", @organization.id%>
        <div class="form-group">
          <%= label_tag(:user, "User:") %><br>
          <%= collection_select(:user, :id, @users, :id, 
            :email, {prompt: nil }, {class: "form-control"}) %>
        </div>
        <div>
          <%= label_tag(:role, "Access Level:") %><br>
          <%= select_tag :role, options_for_select(@roles), {class: "form-control"} %>
        </div>
        <br>
        <div class="actions">
          <%= link_to "Cancel", organization_path(@organization.id), class: 'button left' %>
          <%= submit_tag "Confirm", class: 'button right' %> 
        </div>
      <% end %>
    </div>
  <% end %>
</div>