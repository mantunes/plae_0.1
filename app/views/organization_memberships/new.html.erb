<h2>Invite Members to Organization</h2>
<div class="authform">
  <%= form_for(@organization_membership) do |t| %>
    <%= hidden_field_tag "organization_id", @organization.id%>
    <div class="form-group">
      <%= t.label :email, "Email:" %><br>
      <%= text_field_tag :email, nil, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= t.label :role, "Role:" %><br>
      <%= t.select(:role, @roles, {}, {class: 'form-control'}) %>
    </div>
    <div class="actions">
      <%= link_to "Cancel", organization_path(@organization), class: 'button left' %>
      <%= t.submit "Confirm", class: 'button right' %>
    </div>
  <% end %>
</div>