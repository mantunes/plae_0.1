<div class="container">
  <% if @projects.empty? %>
    <h4> You have no projects </h4>
  <% else %>
    <h2>My Projects</h2>
    <table summary="Project list" class="table table-hover">
      <tr class="header">
        <th>Project Name</th>
        <th>Number of Tasks</th>
        <th>Total Duration</th>
        <th>Organization</th>
        <th>Created At</th>
        <th>Access level</th>
        <th>Actions</th>
      </tr>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= link_to "#{project.name}", project %></td>
            <td><%= project.time_entries.count %></td>
            <td><%= time_ago_in_words(project.total_duration.seconds.ago, include_seconds: true) unless project.total_duration.blank? %></td>
            <td><%= project.organization.try(:name) %> </td>
            <td><%= project.created_at.strftime("%H:%M:%S %d/%m/%y") %></td>
            <td><%= project.project_memberships.find_by(user_id: current_user.id).role %></td>
            <% if current_user.can_delete? project %>
              <td>
                <div class="btn-group">
                  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                    Action <span class="caret"></span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to "Edit", edit_project_path(project) %></li>
                    <li><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                  </ul>
                </div>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="row">
      <div class="col-lg-7">
      <%= page_entries_info @projects, entry_name: 'Project' %>
      </div>
      <div class="col-lg-5">
      <%= paginate @projects %>
      </div>
    </div>
  <% end %>
  <br>
  <%= link_to "Add New Project", new_project_path, class: "btn btn-success" %>
</div>
